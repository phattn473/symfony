{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
<a class="btn btn-primary" href="{{ path('create') }}">Add new</a>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success mt-4 mb-b">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
    {% for data in list %}
        <tr>
        <th scope="row">{{ data.id }}</th>
        <td>{{data.title}}</td>
        <td>{{data.content}}</td>
        <td>
            <a class="btn btn-warning" href="{{ path('update',{'id': data.id }) }}">Update</a>
            <a class="btn btn-danger" href="{{ path('delete',{'id': data.id }) }}">Delete</a>
        </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>

{% endblock %}
